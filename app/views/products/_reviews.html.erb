<table class="table table-bordered">
  <h2>Reviews</h2>
  <thead>
    <tr>
      <th>User</th>
      <th>Review</th>
      <th>Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @product.reviews.each do |r| %>
    <tr>
      <td><%= r.user.first_name %> <%= r.user.last_name %></td>
      <td><%= r.description %></td>
      <td><%= r.rating %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= form_for product_reviews_path(@product, @reviews) do |f| %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>
    <%= f.select :rating, class: 'form-control' %>
  </div>

  <%= f.submit 'Submit review', class: 'btn btn-primary' %>
<% end %>