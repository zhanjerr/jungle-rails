<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Categories', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default categories">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Categories</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |c| %>
          <tr>
            <td><%= c.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</section>
