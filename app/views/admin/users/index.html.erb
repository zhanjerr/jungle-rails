<section class="admin-users-index">

  <header class="page-header">
    <h1>Admin &raquo; All Users</h1>
  </header>

  <div class="panel panel-default categories">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>User_id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>E-mail</th>
          <th>Admin</th>
          <th>Make admin</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |u| %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.first_name %></td>
            <td><%= u.last_name %></td>
            <td><%= u.email %></td>
            <td><%= u.admin %></td>
            <td>
            <% if u.admin %>
            <% else %>
              <%= link_to 'Make Admin', admin_path(u.id, :admin => true), :method => :put %>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>

</section>
