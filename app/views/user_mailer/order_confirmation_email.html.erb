<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <table>
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <tr>
            <td>
              <%= image_tag line_item.product.image.tiny %>
            </td>
            <td>
              <h4><%= line_item.product.name %></h4>
              <br>
              <p><%= line_item.product.description %></p>
            </td>
            <td>
              <%= number_to_currency(line_item.product.price, :precision => 2 ) %>
            </td>
            <td>
              <%= line_item.quantity %>
            </td>
            <td>
              <%= number_to_currency(line_item.total_price, :precision => 2 ) %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= number_to_currency(@order.total, :precision => 2 ) %>
          </th>
        </tr>
      </tfoot>
    </table>
  </body>
</html>